<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DOTUSDT Position</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #1e1e2f;
      color: #fff;
      margin: 0;
      padding: 20px;
      text-align: center;
    }
    h1 {
      margin-bottom: 20px;
      color: #7fcd91;
    }
    table {
      margin: auto;
      border-collapse: collapse;
      background: #2b2b3d;
      border-radius: 8px;
      overflow: hidden;
      min-width: 300px;
      width: 100%;
      display: block;
      overflow-x: auto;
      box-shadow: 0 4px 10px rgba(0,0,0,0.3);
    }
    th, td {
      padding: 12px 15px;
      border: 1px solid #444;
      text-align: center;
    }
    th {
      background: #34344a;
      color: #7fcd91;
    }
    tr:hover td {
      background: #3e3e58;
    }
    button {
      margin-top: 20px;
      padding: 10px 20px;
      background: #7fcd91;
      border: none;
      border-radius: 6px;
      font-size: 16px;
      cursor: pointer;
      color: #1e1e2f;
      font-weight: bold;
      transition: background 0.3s;
    }
    button:hover {
      background: #68b77d;
    }
    .modal {
      display: none;
      position: fixed;
      z-index: 999;
      left: 0; top: 0;
      width: 100%; height: 100%;
      background: rgba(0,0,0,0.6);
      justify-content: center;
      align-items: center;
    }
    .modal-content {
      background: #2b2b3d;
      padding: 20px;
      border-radius: 8px;
      text-align: center;
      max-width: 300px;
      width: 90%;
    }
    .close-btn {
      margin-top: 15px;
      padding: 8px 15px;
      background: #fc2947;
      border: none;
      border-radius: 5px;
      color: #fff;
      cursor: pointer;
    }
    input {
      padding: 8px;
      width: 80%;
      margin-bottom: 10px;
      border-radius: 4px;
      border: 1px solid #555;
      font-size: 14px;
      background: #1e1e2f;
      color: white;
      text-align: center;
    }
    #liqPrice { color: orange; }
    #curRealisedPnl { color: #FC2947; }

    @media (max-width: 600px) {
      body { padding: 10px; }
      th, td { padding: 8px 10px; font-size: 12px; }
      button { width: 90%; font-size: 14px; }
    }
  </style>
  <script>
    async function fetchData() {
      try {
        const res = await fetch('/api/data');
        const data = await res.json();
        if (!data) return;

        document.getElementById('symbol').textContent = data.symbol + " 4x";
        document.getElementById('size').textContent = data.size;
        document.getElementById('avgPrice').textContent = data.avgPrice;
        document.getElementById('positionValue').textContent = data.positionValue;
        document.getElementById('unrealisedPnl').textContent = data.unrealisedPnl;
        document.getElementById('markPrice').textContent = data.markPrice;
        document.getElementById('curRealisedPnl').textContent = data.curRealisedPnl;
        document.getElementById('liqPrice').textContent = data.liqPrice;
        window.currentPosition = data;

        const pnlElem = document.getElementById('unrealisedPnl');
        pnlElem.style.color = data.unrealisedPnl > 0 ? '#7FCD91' : '#FC2947';
      } catch (err) { console.error(err); }
    }

    function openModal() { document.getElementById('myModal').style.display = 'flex'; }
    function closeModal() { document.getElementById('myModal').style.display = 'none'; }

    function calculatePnL(entry, target, size, side) {
      let pnl = side === 'Buy' ? (target - entry) * size : (entry - target) * size;
      return pnl.toFixed(4);
    }

    function handlePriceInput() {
      const target = parseFloat(document.getElementById('inputField').value);
      const pnlElem = document.getElementById('calcResult');

      if (isNaN(target) || !window.currentPosition) {
        pnlElem.textContent = "--";
        pnlElem.style.color = "#fff";
        return;
      }

      const pnl = calculatePnL(
        parseFloat(window.currentPosition.avgPrice),
        target,
        parseFloat(window.currentPosition.size),
        window.currentPosition.side || 'Buy'
      );

      pnlElem.textContent = pnl + " USDC";
      pnlElem.style.color = pnl >= 0 ? '#7FCD91' : '#FC2947';
    }

    setInterval(fetchData, 1500);
    window.onload = fetchData;
  </script>
</head>
<body>
  <h1>DOTUSDT Position</h1>
  <table>
    <tr>
      <th>Symbol</th>
      <th>Size</th>
      <th>Position Value</th>
      <th>Avg Price</th>
      <th>Mark Price</th>
      <th>Unrealised PnL</th>
      <th>CurRealised Pnl</th>
      <th>liqPrice</th>
    </tr>
    <tr>
      <td id="symbol">Loading...</td>
      <td id="size">Loading...</td>
      <td id="positionValue">Loading...</td>
      <td id="avgPrice">Loading...</td>
      <td id="markPrice">Loading...</td>
      <td id="unrealisedPnl">Loading...</td>
      <td id="curRealisedPnl">Loading...</td>
      <td id="liqPrice">Loading...</td>
    </tr>
  </table>

  <button onclick="openModal()">Target Price PnL</button>

  <div class="modal" id="myModal">
    <div class="modal-content">
      <h3>Target Price Calculator</h3>
      <input type="number" id="inputField" placeholder="Enter Target Price" step="0.0001" oninput="handlePriceInput()">
      <p>Potential PnL: <span id="calcResult">--</span></p>
      <button class="close-btn" onclick="closeModal()">Close</button>
    </div>
  </div>

  <!-- TradingView Widget -->
  <div class="tradingview-widget-container" style="margin-top: 20px;">
    <div id="tradingview_chart"></div>
    <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
    <script type="text/javascript">
      new TradingView.widget({
        "width": "100%",
        "height": window.innerWidth < 600 ? 350 : 500,
        "symbol": "BYBIT:DOTUSDT",
        "interval": "15",
        "timezone": "Etc/UTC",
        "theme": "dark",
        "style": "1",
        "locale": "en",
        "toolbar_bg": "#1e1e2f",
        "enable_publishing": false,
        "allow_symbol_change": true,
        "container_id": "tradingview_chart"
      });
    </script>
  </div>
</body>
</html>
